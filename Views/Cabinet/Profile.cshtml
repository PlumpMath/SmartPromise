@using Promises.Views.Cabinet
@inject IPromiseRepository promiseRepository
@model ProfileViewModel

@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(CabinetNavPages.Profile);
    ViewData.AddProfileViewModel(Model);
}

@Html.Partial("_ModalCompletePromise")
@Html.Partial("_ModalCreatePromise")
<div class="container-fluid">
    <div class="row">
        <div>

            
            <div class="promise-stats-block">
                <h4>Statistics</h4>
                <h2 class="bold padding-bottom-7" id="_completed_rating_id"></h2>
                @if (Model.IsYourProfile)
                {
                    <div align="right"> 
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#_fill_promise_modal">Post promise</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div>
            <hr/>
            <div class="loader" id="_promises_loader"></div>
            <div id="_promises_id"></div>
            
        </div>
    </div>

</div>
