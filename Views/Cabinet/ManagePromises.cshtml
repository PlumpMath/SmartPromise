@using Promises.Views.Cabinet
@model ManagePromisesViewModel
@{
    ViewData["Title"] = "Manage promises";
    ViewData.AddActivePage(CabinetNavPages.ManagePromises);
}

<h2>@ViewData["Title"]</h2>

@if (Model.Promises != null)
{
    <p>
        <a asp-action="CreatePromise">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    "Content"
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Promises)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}





